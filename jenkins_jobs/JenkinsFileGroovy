#!groovy
import groovy.json.JsonOutput
import groovy.json.JsonSlurper
node {
    checkout()
    awsUploadCode()
    buildInfrastructure()
}
def checkout() {
    stage('Clone') {
        git credentialsId: 'github', branch: "${params.GITHUB_BRANCH}", url: 'https://github.com/rajeshsanjeevi/openidl-iaac.git'
    }
}

def awsUploadCode() {
    sh "tar -czf aws-content.tar.gz -C "openidl-iaac/aws/aws_resources" --exclude .git ."
}
def buildInfrastructure() {
    stage('Terraform init') {}
    stage('Terraform plan') {}
    stage('Terraform apply') {}
}
