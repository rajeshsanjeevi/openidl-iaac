def buildType
pipeline {
    agent {
        node {
            label 'openidl'
        }
    }
    parameters {
        string description: 'Organization name of the node', name: 'org_name', trim: true
        string description: 'Environment (dev | test | prod)', name: 'env', trim: true
        choice choices: ['vault-deploy', 'vault-cleanup'], description: 'Choose setup/clean vault instance', name: 'action'
        }
    stages {
        stage('Prepare') {
            steps {
                script {
                    buildType = "${params.action}"
                    org = params.org_name.substring(0,4)
                    vault(buildType)

                }
            }
        }
    }
    post {
        success {
             echo "The vault ${params.action} action is successful. Review logs"
        }
        failure {
            echo "The vault ${params.action} action is failed, Please investigate"
        }
    }
}
def vault(thestage){
    stage(thestage) {
        wrap([$class: 'AnsiColorBuildWrapper', colorMapName: "xterm"]) {
            ansibleTower(
                towerServer: 'AWX',
                towerCredentialsId: 'AWX',
                templateType: 'job',
                jobTemplate: "${org}-${params.env}-openidl-vault",
                jobType: "run",
                towerLogLevel: 'full',
                removeColor: false,
                async: false,
                importTowerLogs: true,
                extraVars: """---
                org_name: '${org}'
                env: '${params.env}'
                action: '${params.action}'
                """
            )
        }
    }
}



