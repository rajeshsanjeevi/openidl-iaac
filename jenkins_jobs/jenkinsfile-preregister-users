pipeline {
    agent {
        node {
            label 'slave'
        }
    }
    tools {
        git 'git'
    }
    parameters {
        string description: 'Organization name of the node', name: 'org_name', trim: true
        string description: 'Environment (dev | test | prod)', name: 'env', trim: true
        }
    stages{
        stage('Preregister-Users'){
           steps {
                wrap([$class: 'AnsiColorBuildWrapper', colorMapName: "xterm"]) {
                    ansibleTower(
                        towerServer: 'AWX',
                        towerCredentialsId: 'AWX',
                        templateType: 'job',
                        jobTemplate: "openidl-preregister-users",
                        jobType: "run",
                        towerLogLevel: 'full',
                        removeColor: false,
                        async: false,
                        importTowerLogs: true,
                        extraVars: """---
                        org_name: '${params.org_name}'
                        env: '${params.env}'
                        network:
                            org_name: '${params.org_name}'
                        """
                        )
                }
            }
        }
    }
    post {
        success {
            echo "The preregister users action is successful. Please review logs"

        }
        failure {
            echo "The preregister users action is failed, Please investigate"

        }
    }
}

